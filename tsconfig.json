{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist/components",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "nextera-icon-package/dist/components/*": ["dist/components/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
